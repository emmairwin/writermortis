<div class='row-fluid'>
    <div class='span4 frontpage-section'>
        <h2>Unfinished Stories</h2>
        <%= div_for @incomplete_stories do |story| %>
            <%= link_to story.title, story %>
        <% end %>
    </div>

    <div class='span4 frontpage-section'>
        <h2>Finished Stories</h2>
        <%= div_for @complete_stories do |story| %>
            <%= link_to story.title, story %>
        <% end %>
    </div>

    <div class='span4 frontpage-section'>
        <h2>My Stories</h2>
        <%= link_to "New Story", new_story_path, :class=> 'btn' %>
        <h3>Unfinished</h3>
        <%= div_for @my_unfinished_stories do |story| %>
            <%= link_to story.title, story %>
        <% end %>
        <h3>Finished</h3>
        <%= div_for @my_finished_stories do |story| %>
            <%= link_to story.title, story %>
        <% end %>
    </div>

</div>
