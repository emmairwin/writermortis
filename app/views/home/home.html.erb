<%= content_for :home_header_image  do %>
    <div class='row-fluid'>
        <div class='welcome-top-section span12'>
            <div class='span4 info'>
                <br />
                <br />
                Writer Mortis is designed for writing collaborative <span class='medium'>exquisite corpses</span>, Frankensteinian stories patched together from the skulls of multiple creators.
                <br />
                <br />
                <div class='text-right light-link'><a href="http://en.wikipedia.org/wiki/Exquisite_corpse" target='_blank'>More on Wikipedia</a></span>
            </div>
        </div>
    </div>
<% end %>


<div class='row-fluid'>
    <div class='span4 frontpage-section'>
        <h2>Create</h3>
        <% if user_signed_in? %>
            <%= link_to "New Story", new_story_path, :class=> 'btn' %>
        <% else %>
            <%= link_to "Sign In", new_user_session_path, :class => 'btn btn-success' %> to create a story
        <% end %>
    </div>
    <div class='span4 frontpage-section center-section'>
        <h2>Contribute</h2>
        <%= div_for @incomplete_stories do |story| %>
            <%= link_to story.title, story %>
        <% end %>
    </div>
    <div class='span4 frontpage-section'>
        <h2>Read</h2>
        <%= div_for @complete_stories do |story| %>
            <%= link_to story.title, story %>
        <% end %>
    </div>
</div>
