<h3><%= @story.title %></h3>
<div class="row-fluid"
    <div class="last-story-slice span6">
        <% if @story.slices.last %>
            <%= div_for @story.slices.last do |slice| %>
                <%= slice.body %>
            <% end %>
        <% else %>
            This story needs a beginning...
        <% end %>
    </div>
    <div class="slice-form-wrapper">
        <%= render 'slices/form' %>
    </div>
</div>
