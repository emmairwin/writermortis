<div class='row-fluid'>

    <div class='span2 slices-left'>
        <span class='slices-left'><%= @story.slices_left %><br /></span>
    more until the story is done.
    </div>

    <div class="last-story-slice span8">
        <h3><%= @story.title %></h3>
        <% if @story.slices.last %>
            <%= div_for @story.slices.last do |slice| %>
                <%= slice.body %>
            <% end %>
        <% else %>
            This story needs a beginning...
        <% end %>
    </div>

    <div class="contributors span2">
        <%= render 'contributors' %>
    </div>

</div>

<div class="row-fluid">
    <% if user_signed_in? %>
        <% if @story.can_have_slice_by(current_user) %>
            <div class="slice-form-wrapper span9 offset2">
                <%= render 'slices/form' %>
            </div>
        <% else %>
            <div class="slice-form-wrapper span9 offset2">
                Now ask a friend to continue the story!
            </div>
        <% end %>
    <% else %>
        <div class="slice-form-wrapper span9 offset2">
            <%= render 'slices/form' %>
        </div>
    <% end%>
</div>

<div class="row-fluid">
    <div class="span2">
        <h3>Rules:</h3>
        <ul>
            <li>Each contribution must be less than <%= @story.max_sentences %> sentences.</li>
            <li>The story will be finished when there are <%= @story.total_slices %> contributions.</li>
        </ul>
    </div>
</div>
