<div class='row-fluid'>
    <% if @story.done? %>
        <%= render 'finished_story' %>
    <% end %>

    <% unless @story.done? %>
        <%= render 'unfinished_story' %>
    <% end %>

    <div class="contributors span2">
        <h3>Contributors</h3>
    </div>

</div>

<div class="row-fluid">
    <% unless @story.done? %>
        <div class="slice-form-wrapper span9 offset2">
            <%= render 'slices/form' %>
        </div>
    <% end %>
</div>
