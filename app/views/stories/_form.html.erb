<%= form_for @story do |f| %>
    <div class='error-messages'>
        <% if @story.errors.any? %>
            <div class="alert alert-error">
                <% @story.errors.full_messages.each do |error| %>
                    <p><%= error %></p>
                <% end %>
            </div>
        <% end %>
    </div>

    <div>
        <%= f.label :title %>
    </div>
    <div>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :max_sentences %>
    </div>
    <div>
        <%= f.text_field :max_sentences %>
    </div>
    <div>
        <%= f.label :total_slices %>
    </div>
    <div>
        <%= f.text_field :total_slices %>
    </div>

    <%= f.submit :class => 'btn' %>
<% end %>
